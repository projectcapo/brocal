
<div class="container">
    <h4>Account Creation</h4>

    <form class="row" id="signup" name="signup" method="post" action="/signup">
        <div class="input-field inline col s6">
            <label for="firstname">First Name</label>
            <input name="firstname" type="text" required/>
        </div>
        <div class="input-field inline col s6">
            <label for="lastname">Last Name</label>
            <input name="lastname" type="text" required/>
        </div>
        <div class="input-field inline col s6">
            <label for="age">Age</label>
            <input name="age" type="number" required/>
        </div>
        <div class="input-field inline col s6">
            <select name="sex" required>
                <option value="" disabled selected>Choose Gender</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
            </select>
            <label>Sex</label>
        </div>
        <div class="input-field inline col s6">
            <label for="height">Height</label>
            <input name="height" type="text" required/>
        </div>
        <div class="input-field inline col s6">
            <label for="start_weight">Start Weight</label>
            <input name="start_weight" type="number" required/>
        </div>
        <div class="input-field inline col s6">
            <label for="goal_weight">Goal Weight</label>
            <input name="goal_weight" type="number" required/>
        </div>
        <div class="input-field inline col s6">
            <label for="goal_end_date">Goal End Date</label>
            <input class="datepicker" name="goal_end_date" type="text" required/>
        </div>
        <div class="input-field inline col s6">
            <label for="email">Email Address</label>
            <input class="text" name="email" type="email" required/>
        </div>
        <div class="input-field inline col s6">
            <label for="password">Password</label>
            <input name="password" type="password" required/>
        </div>
        <div class="row">
            <input class="btn blue accent-4 col s12" type="submit" value="Sign Up" />
        </div>
    </form>
</div>